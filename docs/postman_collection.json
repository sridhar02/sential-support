        "body": {
          "mode": "raw",
          "raw": "{\n  \"transactions\": [\n    {\n      \"id\": \"txn_demo_1\",\n      \"customerId\": \"cust_1\",\n      \"cardId\": \"card_1\",\n      \"mcc\": \"5411\",\n      \"merchant\": \"ABC Mart\",\n      \"amountCents\": -12345,\n      \"currency\": \"USD\",\n      \"ts\": \"2024-07-20T12:00:00.000Z\",\n      \"deviceId\": \"device_demo\",\n      \"country\": \"US\",\n      \"city\": \"San Francisco\"\n    }\n  ]\n}"
